{% block body %}
    <body style="background-color: black; color: white;">
        <style>
            .fixed-label-width {
                width: 5px; /* Adjust the width as needed */
                display: inline-block;
            }
            .center-form {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh; /* Adjust if necessary */
            }
            
        </style>

      
 <div class="center-form">
        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

        {# Your Twig template where you render the form #}
        {% for child in form %}
            <div class="form-group">
                {{ form_label(child, null, {'label_attr': {'class': 'fixed-label-width'}}) }}
                {{ form_widget(child, {attr: {class: 'form-control'}}) }}
                {{ form_errors(child) }}
            </div>
        {% endfor %}

        <button class="btn btn-primary" style="color: white;">{{ button_label|default('enregistrer') }}</button>

        {{ form_end(form) }}

         </div>
    </body>
{% endblock %}