{% extends 'back.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

    <div class="row">
    
        {% for event in events %}
            <div class="col-md-4 mb-4">
                <div class="card" style="height: 100%;">
                    <img src="{{ asset('img/' ~ event.image) }}" class="card-img-top" alt="#" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.nom }}</h5>
                        <p class="card-text">{{ event.description }}</p>
                        <p class="card-text"><strong>Lieu:</strong> {{ event.lieu }}</p>
                        <p class="card-text"><strong>Date:</strong> {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</p>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">Show</a></br>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-secondary">Edit</a>
                                {{ include('event/_delete_form.html.twig') }}

                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>No records found</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_event_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
