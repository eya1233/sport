{% extends 'user/index.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <body style="background-color: black; color: white;">
        <h1 style="color: white;">Détails de l'événement</h1>

        <table class="table">
            <tbody>
                <tr style="color: white;">
                    <th>Id</th>
                    <td>{{ event.id }}</td>
                </tr>
                <tr style="color: white;">
                    <th>Nom</th>
                    <td>{{ event.nom }}</td>
                </tr>
                <tr style="color: white;">
                    <th>Description</th>
                    <td>{{ event.description }}</td>
                </tr>
                <tr style="color: white;">
                    <th>Image</th>
                    <td><img src="{{ asset('img/' ~ event.image) }}" class="card-img-top" alt="#" style="width: 300px; height: auto;"></td>
                </tr>
                <tr style="color: white;">
                    <th>Lieu</th>
                    <td>{{ event.lieu }}</td>
                </tr>
                <tr style="color: white;">
                    <th>Date</th>
                    <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_event_indexf') }}" style="color: white;">retourner a la liste</a>
    </body>
{% endblock %}

